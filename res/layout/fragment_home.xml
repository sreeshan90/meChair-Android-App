<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ProgressBar
        android:id="@+id/circularProgressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="false"
        android:max="100"
        android:progressDrawable="@drawable/circularprogress"
        android:secondaryProgress="100" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/black">

        <TextView
            android:id="@+id/daily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/circularProgressbar"
            android:layout_alignLeft="@+id/circularProgressbar"
            android:padding="20dp"
            android:text="Today"
            android:textColor="@color/textcolor"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/monthly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/circularProgressbar"
            android:layout_alignRight="@+id/circularProgressbar"
            android:layout_marginLeft="40dp"
            android:text="Monthly"
            android:textColor="@color/textcolor"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/weekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/monthly"
            android:layout_alignBottom="@+id/monthly"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:text="Weekly"
            android:textColor="@color/textcolor"
            android:textSize="25dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bluebg" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:shadowColor="@android:color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="Keeps you away from wheel chair"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/slogan"
        android:layout_centerHorizontal="true"
        android:shadowColor="@android:color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="meChair"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="50dp" />
    
   

</RelativeLayout>